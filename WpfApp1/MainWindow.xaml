<Window x:Class="WpfApp1.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Query review" Height="600" Width="800" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Button Content="Login" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14" x:Name="LoginBtn" Margin="340,290,0,0" Height="30" MinHeight="30" MinWidth="120" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Click="Button_Login" />
        <TextBox materialDesign:HintAssist.Hint="Login" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="200,200,200,0" Height="30" Width="200" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0,0,0,0" x:Name="Login"/>
        <PasswordBox materialDesign:HintAssist.Hint="password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="200,250,200,0" Height="30" Width="200" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0" x:Name="Password"/>
    </Grid>
</Window>
