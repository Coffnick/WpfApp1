<Window x:Class="WpfApp1.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="600" Width="1200">
    <Grid>
        <DataGrid x:Name="Colums" AutoGenerateColumns="True" AutoGeneratingColumn="Colums_AutoGeneratingColumn" Margin="0,0,0,125" MaxWidth="1050" MaxHeight="400" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10"/>


        <Border Margin="1050,0,0,0">
            <Grid>
                <Button x:Name="ShowData" Margin="10,10,10,481" Height="35" Width="100" Content="Show Data" Click="Show_Data"/>
                <Button x:Name="SaveData" Margin="10,60,10,430" Height="35" Width="100" Content="SaveData" Click="SaveData_Click"   />
            </Grid>
        </Border>
    </Grid>
    

</Window>
